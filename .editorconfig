# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab
tab_width = 2

# Java files
[*.java]
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Maven wrapper
[mvnw]
end_of_line = lf

# Windows CMD scripts
[*.cmd]
end_of_line = crlf
